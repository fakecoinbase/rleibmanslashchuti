schema {
  query: Queries
  mutation: Mutations
  subscription: Subscriptions
}

scalar Long

enum UserStatus {
  Idle
  Invited
  Offline
  Playing
}

input UserInput {
  id: Int
  email: String!
  name: String!
  userStatus: UserStatus!
  created: Long!
  lastUpdated: Long!
  lastLoggedIn: Long
  active: Boolean!
  deleted: Boolean!
}

type ChatMessage {
  fromUser: User!
  msg: String!
  channelId: Int!
  toUser: User
  date: Long!
}

type Mutations {
  say(msg: String!, channelId: Int!, toUser: UserInput): Boolean!
}

type Queries {
  getRecentMessages(value: Int!): [ChatMessage!]
}

type Subscriptions {
  chatStream(channelId: Int!, connectionId: String!): ChatMessage!
}

type User {
  id: Int
  email: String!
  name: String!
  userStatus: UserStatus!
  created: Long!
  lastUpdated: Long!
  lastLoggedIn: Long
  active: Boolean!
  deleted: Boolean!
}